<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#363939"
    android:orientation="vertical"
    tools:context="s.travelio.MainActivity">

    <Button
        android:id="@+id/btnPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/mybutton"
        android:elevation="10dp"
        android:onClick="btnPhone_Click"
        android:text="Sign-in"
        android:textColor="@android:color/white"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,UnusedAttribute" />

    <Button
        android:id="@+id/registerDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/mybutton"
        android:elevation="10dp"
        android:onClick="btnRegisterDetails_Click"
        android:text="Register details"
        android:textColor="@android:color/white"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,UnusedAttribute" />

</LinearLayout>
